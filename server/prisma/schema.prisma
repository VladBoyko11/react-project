// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  @default("USER")
  basket   Basket?
  rating   Rating?
}

model Basket {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
  devices BasketDevice[]
}

model Rating {
  id     Int  @id @default(autoincrement())
  rate   Int
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
  device Device @relation(fields: [deviceId], references: [id])
  deviceId Int @unique
}

model Device {
  id     Int  @id @default(autoincrement())
  name String @unique
  price Int
  img String 
  title String
  description String

  rating Int @default(0)
  ratings Rating[]
  basket BasketDevice?
  type Type @relation(fields: [typeId], references: [id])
  typeId Int
  brand Brand @relation(fields: [brandId], references: [id])
  brandId Int
}

model Type {
  id     Int  @id @default(autoincrement())
  name String @unique
  devices Device[]
  brands TypeBrand[]
}

model Brand {
  id     Int  @id @default(autoincrement())
  name String @unique
  devices Device[]
  types TypeBrand[]
}

model TypeBrand {
  type Type @relation(fields: [typeId], references: [id])
  typeId Int
  brand Brand @relation(fields: [brandId], references: [id])
  brandId Int

  @@id([typeId, brandId])
}

model BasketDevice {
  device Device @relation(fields: [deviceId], references: [id])
  deviceId Int @unique

  basket Basket @relation(fields: [basketId], references: [id])
  basketId Int @unique

  countOfProducts Int @default(1)

  @@id([deviceId, basketId])
}
